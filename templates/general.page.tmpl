{{define "js"}}

<script>
    document.getElementById("check-availability").addEventListener("click", function () {
        let html = `
        <form id="check-availability-form" action="post" novalidate class="needs-validation">
                <div class="form-row">
                    <div class="col">
                        <div class="form-row" id="reservation-dates-modal">                           
                            <div class="col">
                                <input disabled required type="text" name="start" id="start" class="form-control" required placeholder="Arrival">
                            </div>
                            <div class="col">
                                <input disabled required type="text" name="end" id="end" class="form-control" required placeholder="Departure">
                            </div>                
                        </div>
                    </div>
                </div>
            </form>
        `
        attention.custom({
            msg: html,
            title: 'Choose your dates',
            willOpen: () => {
                console.log('hello from willOpen')
                flatpickr('#start', { dateFormat: 'Y-m-d' })
                flatpickr('#end', { dateFormat: 'Y-m-d' })
            },
            didOpen: () => {
                document.getElementById('start').removeAttribute('disabled')
                document.getElementById('end').removeAttribute('disabled')
            },
             preConfirm: () => {
                return [
                    document.getElementById('start').value,
                    document.getElementById('end').value,
                ]
            },
            callback: function (result) {
                console.log("called")

                let form = document.getElementById("check-availability-form")
                let fromData = new FormData(form);
                fromData.append("csrf_token", "{{.CSRFToken}}")

                fetch("/search-availability-json", {
                    method: "post",
                    body: fromData
                }).then(response => response.json())
                    .then(data => {
                        console.log(data);
                        console.log(data.ok);
                        console.log(data.message);
                    })
            }
        })
    })

</script>
{{end}}